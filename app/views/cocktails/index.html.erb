<div class="home-banner">
    <h1>The Worlds <strong>best</strong> cocktails!</h1>
    <p>The best cocktails in the world are taking the world by storm.</p>
    <p>Looking for great cocktails? look no more!</p>
    <a class="btn btn-gradient"> <%= link_to "Add a new cocktail", new_cocktail_path %></a>
</div>
<div class="container">

  <div class="cocktail-grid">
    <% @cocktails.each do |cocktail| %>
    <div class="cocktail-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/random/600x800);">
      <h3><%= link_to "#{cocktail.name}", cocktail_path(cocktail.id) %></h3>
      <%= link_to cocktail_path(cocktail), class: 'cocktail-delete', method: :delete, data: { confirm: "Are you sure?" } do %>
      <i class="fas fa-trash-alt"></i>
      <% end %>
    </div>
    <% end %>
  </div>
</div>
</div>
